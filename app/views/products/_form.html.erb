      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="addform">
  <div class="field">
    <label for="product_name" id="prodname">Name</label><br>
    <input id="product_name" name="product[name]" type="text" />
  </div>
  <div class="field">
    <%= f.label :description, class: "col-md-4 control-label" %><br>
    <%= f.text_area :description, class: "form-control", id: "description" %>
  </div>
  <div class="field">
    <%= f.label :image_url, class: "col-md-4 control-label" %><br>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :color, class: "col-md-4 control-label" %><br>
    <%= f.text_field :color, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-warning" %>
  </div>
</div>
<% end %>
